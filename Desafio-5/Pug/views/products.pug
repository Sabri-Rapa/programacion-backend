html
    head
        title='My app'
        style
            include styles.css
    body
        h1="Listado de productos"
        div(class='btnListado')
            <a class="btn" href="/api/form">Agregar producto</a>   

        for item in products
            div(class='productos')
                div(class='detalle')
                p=item.title
                p=item.price
                div
                img(class='product-img', src=item.thumbnail)