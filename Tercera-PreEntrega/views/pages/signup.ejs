<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>

  <body>
    <div>
      <h1>REGISTRARSE</h1>

      <h3 id="div-compres"></h3>

      <form action="" method="post">
        <div id="login-div">
          <input
            type="text"
            id="nombre"
            name="nombre"
            value=""
            placeholder="Nombre"
          />
          <br />

          <input
            type="text"
            id="apellido"
            name="apellido"
            value=""
            placeholder="Apellido"
          />
          <br />

          <input
            type="text"
            id="email"
            name="email"
            value=""
            placeholder="Email"
          />
          <br />

          <input
            type="number"
            id="edad"
            name="edad"
            value=""
            placeholder="Edad"
          />
          <br />

          <input
            type="text"
            id="direccion"
            name="direccion"
            value=""
            placeholder="Direccion"
          />
          <br />

          <input
            type="number"
            id="telefono"
            name="telefono"
            value=""
            placeholder="Telefono"
          />
          <br />

          <label for="image" class="form-check-label mt-3"
            >Sub√≠ una foto para tu Avatar
          </label>
          <input
            class="form-control m-1"
            id="image"
            type="file"
            name="image"
            required
          />
          <br />

          <input
            type="text"
            id="username"
            name="username"
            value=""
            placeholder="Username"
          />
          <br />

          <input
            type="password"
            id="password"
            name="password"
            value=""
            placeholder="Password"
            autocomplete="off"
          />
        </div>

        <div>
          <button type="submit" id="login-btn">Registrarse</button>
        </div>
      </form>

      <div>
        <div><br /></div>
        <button onclick="location.href='/api/login'">Volver a Login</button>
      </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
  </body>
</html>
