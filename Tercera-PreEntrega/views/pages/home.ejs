<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>

    <header>
      <%- include('../partials/navbar')%>
    </header>
    <div class="btnListado">
      <a class="btn" href="/api/carrito/view">Mi Carrito</a> 
      <a class="btn" href="/api/perfil">Mi perfil</a> 
  
      </div>
  
    <h2>BIENVENIDO, <%= name? name : "" %></h2>

    <div id="div-compres"></div>

    <h3>PRODUCTOS</h3>
   
    <div class="btnListado">
    <a class="btn" href="/api/formProducts">Agregar producto</a>   
    </div>

    <div id="products">
      <table class="table my-1">
        <thead>
          <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Precio</th>
            <th scope="col">Foto</th>
            <th scope="col">Agregar al <br> carrito</th>
          </tr>
        </thead>

        <% if(products){ %>

        <tbody id="productsTable">

          <% products.forEach((element) => { %>
          <tr>
            <th scope="row"><%=element.nombre%></th>
            <td style="text-transform: uppercase"><%=element.precio%></td>
            <td>
              <img src="<%=element.thumbnail%>" class="w-50" alt="..." />
            </td>
            <td>
            <form action="/api/carrito/agregarProducto" method="POST">
              <input type="hidden" name="prod_id" value=<%=element.id%>>
              <button type="submit">ADD</button>
            </td>
            </form>
          </tr>
          <%})%>
        </tbody>
        <%}%>
      </table>
    </div>

    <br />

    <h3>COMENTARIOS</h3>
    <div>
      <input type="email" id="email" value="" placeholder="...@email.com" />

      <br />

      <input type="text" id="nombre" value="" placeholder="Nombre" />

      <br />

      <input type="text" id="apellido" value="" placeholder="Apellido" />

      <br />

      <input type="number" id="edad" value="" placeholder="Edad" />

      <br />

      <input type="text" id="alias" value="" placeholder="Alias" />

      <br />

      <input type="text" id="avatar" value="" placeholder="Avatar" />

      <br />

      <input
        type="text"
        id="inputTextoMsj"
        value=""
        placeholder="Escriba su mensaje"
      />
    </div>

    <div>
      <button id="submitMessage">Enviar</button>
    </div>

    <div id="div-chats"></div>


    <script src="/socket.io/socket.io.js"></script>

    <script type="module" src="/index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js"></script>

  </body>
</html>
